<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#335566"
    android:padding="10dp">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:text="انت متاكد انك هتمسح البيانات كلها ولا هترجع تزعل عليهم"
        android:id="@+id/textView3"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="موافق"
        android:textSize="20dp"
        android:id="@+id/delete_alll"
        android:onClick="delete_all"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#4477AA"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="مش موافق"
        android:background="#4477AA"
        android:textColor="#FFFFFF"
        android:id="@+id/cansel"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/delete_alll"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
         />


</RelativeLayout>