<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.attendme.search"
    android:background="#335566">




    <EditText
            android:layout_width="355dp"
            android:layout_height="60dp"
            android:id="@+id/student_idsearch"
        android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:hint="ادخل id الطالب"
            android:ems="10"

        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="بحث"
        android:id="@+id/search"
        android:onClick="sear"
        android:textSize="50dp"
        android:background="#4477aa"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
       android:layout_marginTop="20dp"
        android:text="ID                    Name                attend"
        android:textSize="20dp"
        android:textColor="#4477AA"
        android:id="@+id/textView5"
        android:layout_below="@+id/student_idsearch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/vie"
        android:textSize="22dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="البحث السنوى"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:onClick="btn_sanwy"
        android:id="@+id/button5"
        android:background="#4477aa"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
